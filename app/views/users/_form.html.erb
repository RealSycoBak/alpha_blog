<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-10">
     <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |form| %>
        <div class="form-group row mb-3">
          <%= form.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= form.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row mb-3">
        <%= form.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= form.password_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Choose a password" %>
        </div>
      </div>

        <div class="form-group row justify-content-center mb-3">
          <%= form.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
    <div class="text-center">
      <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-info link-underline link-underline-opacity-0" %>
    </div>
    </div>
  </div>
</div>