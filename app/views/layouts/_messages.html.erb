<div class="container">
  <% flash.each do |name, msg| %>
  <div class='alert alert-<%="#{name}" %> alert-dismissible fade show' role="alert">
    <%= msg %>
    <button type="button" class='close position-absolute top-0 end-0 m-2 btn btn-primary bg-<%="#{name}" %> text-white border-<%="#{name}" %>' data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
  </div>
  <% end %>
</div>