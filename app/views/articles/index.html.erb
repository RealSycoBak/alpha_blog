<div class="container">
  <% flash.each do |name, msg| %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
          </button>
  </div>
  <% end %>
</div>


<% content_for :title, "Articles" %>

<h1 class="text-center mt-4">Listing all articles</h1>

<div class="container">
<% @articles.each do |article| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header fst-italic">
          by Alon Baker
        </div>
        <div class="card-body">
          <h5 class="card-title"> <%= link_to article.title, article_path(article), class: "text-success link-underline link-underline-opacity-0"%></h5>
          <p class="card-text"><%= truncate(article.description, length: 100) %></p>
          <%= link_to "View", article_path(article), class:"btn btn-outline-success" %>
          <%= link_to "Edit", edit_article_path(article), class:"btn btn-outline-info" %>
          <%= link_to "Delete", article_path(article), class:"btn btn-outline-danger", data: {turbo_method: :delete} %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(article.created_at) %> ago,
          edited <%= time_ago_in_words(article.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>


    
       
